#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() 
{

    int n;
    scanf("%d", &n);
    int k = 0;
    for (int i = 0; i < n * 2 - 1; i++)
    {
        for (int j = 0; j < n * 2 - 1; j++)
        {
            if (i <= n - 1) {
                if (j <= n - 1) {
                    if (j - i >= 0){
                    printf("%d ", n - i);
                    } else {
                    printf("%d ", n - j);
                    }
                } else {
                    if (j + i > 2 * n - 2){
                        printf("%d ", n - (n * 2 - 2 - j));
                    }
                    else {
                        printf("%d ", n - i);
                    }
                }
            } else {
                if (j <= n -1){
                    if (j + i >= 2 * n - 2){
                        printf("%d ", n - (n * 2 - 2 - i));
                    } else {
                        printf("%d ", n - j);
                    }
                } else {
                    if (i - j >= 0){
                        printf("%d ", n - (n * 2 - 2 - i));
                    } else{
                        printf("%d ", n - (n * 2 - 2 - j));
                    }
                    
                }
            }
        }
        printf("\n");
        if (i < n - 1){
            k = i + 1;
        } else {
            k = n + 2 - i;
        }
    }
    return 0;
}
